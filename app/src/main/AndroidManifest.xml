<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kushjuthani.healthsearch">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_heart"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_heart_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".AboutUs"></activity>
        <activity android:name=".Help"
            android:label="Help Center"
            />
        <activity android:name=".Dashboard" />
        <activity android:name=".showHospitalData" />
        <activity android:name=".showDoctorData" />
        <activity android:name=".listoftypes" />
        <activity android:name=".Type" />

        <activity android:name=".user_profile"
            android:label="Profile"
            />
        <activity
            android:name=".signup"
            android:theme="@style/nobar"
            android:windowSoftInputMode="stateHidden|adjustResize|adjustPan" />
        <activity
            android:name=".welcome"
            android:theme="@style/nobar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".login_page"
            android:theme="@style/nobar" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>