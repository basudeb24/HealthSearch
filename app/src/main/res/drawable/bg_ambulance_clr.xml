<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <gradient
                android:startColor="#ff1010"
                android:centerColor="#ff1010"
                android:endColor="#ff1010"
                android:angle="180"/>
            <stroke
                android:width="2sp"
                android:color="#333333"/>
            <corners
                android:radius="10dp"/>
            <padding
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"
                android:left="10dp"/>
        </shape>
    </item>

</selector>